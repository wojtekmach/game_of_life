#!/usr/bin/env ruby


require_relative "../lib/game"
require_relative "../lib/game_loader"
require_relative "../lib/game_printer"
require_relative "../lib/ncurses_runner"

game = Game(
  '                                                            ',
  '                         x                                  ',
  '                       x x                                  ',
  '             xx      xx            xx                       ',
  '            x   x    xx            xx                       ',
  ' xx        x     x   xx                                     ',
  ' xx        x   x xx    x x                                  ',
  '           x     x       x                                  ',
  '            x   x                                           ',
  '             xx                                             ',
  '                                                            ')

NcursesRunner.new(game).run
